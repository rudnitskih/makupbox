.header
	fixed left right top
	font-size: 22px
	text-align: center
	background-color #232323
	text-transform: uppercase
	&__logo
	&__save
		height 40px
		vertical-center()
	&__logo
	&__save
		position relative
		z-index 10
	&__logo
		float left
		font-size 30px
		color #fff
		&-text
			relative top -1px
			&.mobile
				@media tablet_desktop
					display none
			&.desktop
				@media phone
					display none
					
	&__filters
		absolute top left right
		padding-top 5px
		z-index 5
		&-item
			border-right 1px solid #fff
			padding 0 10px
			cursor pointer
			line-height 1.1
			&:last-child
				border-right 0 none
			&:hover
				font-family mainFontBold
	&__save
		float right
		cursor pointer
		text-decoration none
		&:hover
			font-family mainFontBold
		&-icon
			position: relative
			top 1px
			margin-right 10px
			@media phone
				display none
			