.header
	fixed left right top
	font-size: 22px
	text-align: center
	background-color #232323
	text-transform: uppercase
	&__logo
	&__filters
	&__save
		height 40px
		vertical-center()
	&__logo
	&__save
		position relative
		z-index 10
	&__logo
		float left
	&__filters
		absolute top left right
		z-index 5
		&-item
			border-right 1px solid #fff
			padding 0 10px
			cursor pointer
			line-height 1.1
			&:last-child
				border-right 0 none
	&__save
		float right
		cursor pointer
		&-icon
			position: relative
			top 1px
			margin-right 10px
			