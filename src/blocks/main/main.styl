.main
	position relative
	height 100%
	center-block()
	&__input
		absolute top left bottom right
		height 100%
		width 100%
		opacity 0
		cursor pointer
	&__ask-text
		font-size 30px
	&__canvas
		width 100%
		height 100%
		overflow hidden
		// vertical-center()

		&.active
			background-color #191919
		&:not(.active)
			display none
		.canvas-container
			absolute top 50% left 50%
	&.image-added
		.main
			&__inner
			&__input
				display none
			&__zoom
				absolute top left 50%
				margin-left -45px
				user-select none
				&-item
					width 30px
					height @width
					display inline-block
					background-color #fff
					line-height 30px
					color #000
					font-size 30px
					border 1px solid #000
					font-family mainFontBold
					cursor pointer
					transition background-color .2s
					&:hover
						background-color #eee
					&:last-child
						margin-left -1px
					&_remove
						vertical-center()
						&:before
							content 'âœ•'
							display inline-block
							vertical-align: middle;
							font-size 16px
		.canvas-container
			&.moving
				.upper-canvas 
					cursor move !important
					
				